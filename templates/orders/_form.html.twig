<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="left-sidebar">

                <aside class="l_widget l_categories_widget">
                    <div class="l_title">

                    </div>
                    <ul>
                        <li><a href="{{ path('userpanel_show') }}"><span class="fa-icon-chevron-right"></span>Bilgilerim</a> </li>
                        <li><a href="{{ path('userpanel_edit') }}"><span class="fa-icon-chevron-right"></span>Düzenle</a> </li>
                        <li><a href="{{ path('shopcart_index') }}"><span class="fa-icon-chevron-right"></span>Sepetim</a> </li>
                        <li><a href=""><span class="fa-icon-chevron-right"></span>Favori Ürünlerim</a> </li>
                        <li><a href="{{ path('shopcart_index') }}"><span class="fa-icon-chevron-right"></span>Sipariş Geçmişi</a> </li>
                        <li><a href=""><span class="fa-icon-chevron-right"></span>Yorumlarım</a> </li>
                        <li><a href="{{ path('app_logout') }}"><span class="fa-icon-chevron-right"></span>Çıkış</a> </li>
                    </ul>
                </aside>

            </div>
        </div>

        <div class="col-sm-9 padding-right">



            <form id="checkout-form" class="billing_inner row" name="order" action="{{ path('orders_new') }}" method="post">
                <div class="col-md-6">
                    <div class="billing-details">

                        <div class="section-title" >
                            <h3 class="title">Fatura Detayları</h3>
                        </div>
                        <div class="form-group">
                            <label>Ödenecek Tutar: </label>
                            <input class="form-control" type="text" name="orders[amount]" value="{{ total }}" placeholder="Total">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="orders[name]" value="{{ app.user.name }}" placeholder="Adı Soyadı">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="orders[address]" value="{{ app.user.adress }}" placeholder="Adres">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="city" name="orders[city]" value="{{ app.user.city }}" placeholder="Şehir">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="orders[phone]" value="{{ app.user.phone }}" placeholder="Phone">
                        </div>


                        <label>KREDİ KARTI BİLGİLERİ</label>
                        <div class="form-group">
                            <input class="form-control" type="text" name="cardholdername" placeholder="KREDİ KARTI ADI SOYADI">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="cartnumber" placeholder="KART NUMARASI">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="cart" placeholder="SON KULLANMA TARİHİ AA/YY">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="secure" placeholder="GÜVENLİK KODU">
                        </div>

                        <input type="hidden" name="token" value="{{ csrf_token('form-order') }}"/>
                        <label class="col-sm-2 control-label">  </label>

                        <div class="control-group" class="col-sm-5">
                            <input class="shopping-cart-btns" type="submit" value="Satın Al"/>
                        </div>

                    </div>
                </div>
            </form>




        </div>
    </div>
</div>