{% extends 'admin/adminbase.html.twig' %}
{% block title %}ADMİNPANEL{% endblock %}


{% block body %}
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
    <table class="table">
        <h1>SİPARİŞLER</h1>
        <thead>

            <tr>
                <th>İsim</th>
                <th>Toplam Tutar</th>
                <th>Şehir</th>
                <th>Telefon</th>
                <th>Ek Bilgi</th>
                <th>Not</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.name }}</td>
                <td>{{ order.amount }}</td>
                <td>{{ order.city }}</td>
                <td>{{ order.phone }}</td>
                <td>{{ order.shipinfo }}</td>
                <td>{{ order.note }}</td>
                <td>
                    <a href="{{ path('admin_orders_show', {'id': order.id}) }}" class="btn btn-primary">Göster</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Yeni Sipariş Yok</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div></div></div>
</div>
{% endblock %}
