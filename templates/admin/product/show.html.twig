{% extends 'admin/adminbase.html.twig' %}

{% block title %}Ürünü Detay{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <section class="content">
                        <div class="panel panel-default">

                            <div class="panel-heading">
                               ÜRÜN DETAYLARI
                            </div>

                            <div class="panel-body">
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Başlık</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Anahtar Kelime</th>
                <td>{{ product.keywords }}</td>
            </tr>
            <tr>
                <th>Tür</th>
                <td>{{ product.type }}</td>
            </tr>
            <tr>
                <th>Yayımcı</th>
                <td>{{ product.publisherId }}</td>
            </tr>
            <tr>
                <th>Yıl</th>
                <td>{{ product.year }}</td>
            </tr>
            <tr>
                <th>Miktar</th>
                <td>{{ product.amount }}</td>
            </tr>
            <tr>
                <th>Alış Fiyatı</th>
                <td>{{ product.pprice }}</td>
            </tr>
            <tr>
                <th>Satış Fiyatı</th>
                <td>{{ product.sprice }}</td>
            </tr>
            <tr>
                <th>Min</th>
                <td>{{ product.min }}</td>
            </tr>
            <tr>
                <th>Ürün Detay</th>
                <td>{{ product.detail }}</td>
            </tr>
            <tr>
                <th>Resim</th>
                <td>{{ product.image }}</td>
            </tr>
            <tr>
                <th>Kategorisi</th>
                <td>{{ product.categoryId }}</td>
            </tr>
            <tr>
                <th>Kullanıcı id</th>
                <td>{{ product.userId }}</td>
            </tr>
            <tr>
                <th>Statü</th>
                <td>{{ product.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_product_index') }}" class="btn btn-info">Listeye Dön</a>

    <a href="{{ path('admin_product_edit', {'id': product.id}) }}"  class="btn btn-primary">Düzenle</a>

    {{ include('admin/product/_delete_form.html.twig') }}
    </div>
    </div>
    </section>
    </div>
    </div>
    </div>
    </div>
{% endblock %}

