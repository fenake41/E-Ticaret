{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div id="page-wrapper">
        <div id="page-inner">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-head-line">MESAJ LİSTESİ</h1>
                    <div class="panel panel-default">

                        <div class="panel-heading">
                            MESAJLAR
                        </div>

                        <div class="panel-body">

                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ message.id }}</td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ message.name }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ message.email }}</td>
                                </tr>
                                <tr>
                                    <th>Subject</th>
                                    <td>{{ message.subject }}</td>
                                </tr>
                                <tr>
                                    <th>Message</th>
                                    <td>{{ message.message }}</td>
                                </tr>
                                <tr>
                                    <th>Comment</th>
                                    <td>{{ message.comment }}</td>
                                </tr>
                                <tr>
                                    <th>Status</th>
                                    <td>{{ message.status }}</td>
                                </tr>
                                </tbody>
                            </table>

                            <a href="{{ path('admin_messages_index') }}">back to list</a>

                            {{ include('admin/messages/_delete_form.html.twig') }}

                            <form action="{{ path('admin_messages_update',{'id':message.id}) }}"
                                  style="margin-left: 15px" method="post">

                                <h3>Cevap</h3>
                                <textarea name="comment" rows="3" cols="65%"> {{ message.comment }} </textarea>
                                <input class="btn btn-primary btn-block" type="submit" value="Güncelle">

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
