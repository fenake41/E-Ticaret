{% extends 'home/frontbase.html.twig' %}

{% block title %}ANASAYFA{% endblock %}

{% block body %}

    <section id="slider"><!--slider-->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#slider-carousel" data-slide-to="1"></li>
                            <li data-target="#slider-carousel" data-slide-to="2"></li>
                        </ol>

                        <div class="carousel-inner" style="height: 300px;">
                            {% set count = 0 %}
                            {% for slider in sliders %}
                                <div class="item {% if count == 0 %} active {% endif %}">
                                    <div class="col-sm-12">
                                        <a href="{{ path('product_detail' , {'id' : slider.id} ) }}">
                                            <img src="{{ asset('uploads') }}/images/{{ slider.image }}"
                                                 class="girl img-responsive" alt=""
                                                 style="height: 300px; width: auto; margin: auto;"/>
                                        </a>
                                    </div>
                                </div>
                                {% set count = 1 %}
                            {% endfor %}
                        </div>

                        <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </section><!--/slider-->
    <style>
        ul#menu-v, #menu-v ul {
            width: 270px; /* Main Menu width */
            border: 1px solid rgba(190, 190, 190, 0.3);
            list-style: none;
            margin: 0;
            padding: 0;
            z-index: 9;
        }

        #menu-v li {
            margin: 0;
            padding: 0;
            position: relative;
            background-color: #DDDDDD; /*fallback color*/
            background-color: rgba(0, 0, 0, 0.5);
            transition: background 0.5s;
        }

        #menu-v li:hover {
            background-color: rgba(0, 0, 0, 0.9);
        }

        #menu-v a {
            font: normal 12px Arial;
            border-top: 1px solid rgba(190, 190, 190, 0.3);
            display: block;
            color: #EEEEEE;
            text-decoration: none;
            line-height: 30px;
            padding-left: 22px;
            position: relative;
        }

        #menu-v li:first-child a {
            border-top: 0;
        }

        #menu-v a.arrow::after {
            content: '';
            position: absolute;
            display: inline;
            top: 50%;
            margin-top: -4px;
            right: 8px;
            border-width: 4px;
            border-style: solid;
            border-color: transparent transparent transparent white;
            transition: border-color 0.5s;
        }

        #menu-v li a.arrow:hover::after {
            border-color: transparent transparent transparent #CCCCCC;
        }

        /*Sub level menu items
        ---------------------------------------*/
        #menu-v li ul {
            min-width: 180px; /* Sub level menu min width */
            position: absolute;
            display: none;
            left: 100%;
            top: 50%;
            transform: translateY(-50%);
        }

        #menu-v li:hover > ul {
            display: block;
        }
    </style>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="left-sidebar">
                        <h2>KATEGORİ</h2>

                        {% for cat in cats %}
                            {{ cat|raw }}

                        {% endfor %}


                    </div>
                </div>

                <div class="col-sm-9 padding-right">
                    <div class="features_items"><!--features_items-->
                        <h2 class="title text-center">ÜRÜNLER</h2>
                        {% for rs in sliders %}
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <div style="height: 300px;">
                                                <img src="{{ asset('uploads') }}/images/{{ rs.image }}" alt=""/>
                                            </div>
                                            <h2>{{ rs.sprice }} ₺</h2>
                                            <p>{{ rs.title }}</p>
                                            <a href="{{ path('product_detail', {'id': rs.id}) }}" class="btn btn-default add-to-cart"><i
                                                        class="fa fa-shopping-cart"></i>İncele</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div><!--features_items-->

                </div>
            </div>
        </div>
    </section>
{% endblock %}
