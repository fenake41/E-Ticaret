{% extends 'home/frontbase.html.twig' %}

{% block title %} İletişim{% endblock %}
{% block keywords %} {{ data[0].keywords }} {% endblock %}
{% block description %} {{ data[0].description }} {% endblock %}
{% block body %}

    <section class="feature_add_area">
        <div class="container">
            <div class="row feature_inner">
                <div class="col-lg-6">
                    <hr class="soften">
                    <h3>İLETİŞİM</h3>
                    <hr class="soften">
                    <p>
                        {{ data[0].contact|raw }}
                    </p>
                </div>
                <div class="col-lg-6">

                    <hr class="soften">
                    <h3>MESAJ GÖNDER</h3>
                    <hr class="soften">
                    {{ include('home/messages.html.twig') }}
                    <form method="post" id="contactForm">
                        <div class="form-group">
                            <input type="text" class="form-control" id="name" name="messages[name]" placeholder="Full Name *">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" name="messages[email]" placeholder="Email Address *">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="website" name="messages[subject]" placeholder="Subject">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="messages[message]" id="message" rows="5" placeholder="Your Message..."></textarea>
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="token" value="{{ csrf_token('form-message') }}" />
                            <input type="hidden" name="messages[status]" value="New" />
                            <button type="submit" value="submit" class="btn update_btn form-control">Send Message</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </section>



{% endblock %}