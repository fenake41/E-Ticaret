{% extends 'home/frontbase.html.twig' %}

{% block title %}  {{ data[0].title }}/Ürünler {% endblock %}
{% block keywords %}  {{ data[0].keywords }} {% endblock %}
{% block description %} {{ data[0].description }} {% endblock %}

{% block body %}
    <style>
        ul#menu-v, #menu-v ul {
            width: 270px; /* Main Menu width */
            border: 1px solid rgba(190, 190, 190, 0.3);
            list-style: none;
            margin: 0;
            padding: 0;
            z-index: 9;
        }

        #menu-v li {
            margin: 0;
            padding: 0;
            position: relative;
            background-color: #DDDDDD; /*fallback color*/
            background-color: rgba(0, 0, 0, 0.5);
            transition: background 0.5s;
        }

        #menu-v li:hover {
            background-color: rgba(0, 0, 0, 0.9);
        }

        #menu-v a {
            font: normal 12px Arial;
            border-top: 1px solid rgba(190, 190, 190, 0.3);
            display: block;
            color: #EEEEEE;
            text-decoration: none;
            line-height: 30px;
            padding-left: 22px;
            position: relative;
        }

        #menu-v li:first-child a {
            border-top: 0;
        }

        #menu-v a.arrow::after {
            content: '';
            position: absolute;
            display: inline;
            top: 50%;
            margin-top: -4px;
            right: 8px;
            border-width: 4px;
            border-style: solid;
            border-color: transparent transparent transparent white;
            transition: border-color 0.5s;
        }

        #menu-v li a.arrow:hover::after {
            border-color: transparent transparent transparent #CCCCCC;
        }

        /*Sub level menu items
        ---------------------------------------*/
        #menu-v li ul {
            min-width: 180px; /* Sub level menu min width */
            position: absolute;
            display: none;
            left: 100%;
            top: 50%;
            transform: translateY(-50%);
        }

        #menu-v li:hover > ul {
            display: block;
        }
    </style>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="left-sidebar">
                        <h2>Kategoriler</h2>
                        <div class="panel-group category-products" id="accordian"><!--category-productsr-->
                            {% for cat in cats %}
                                {{ cat|raw }}

                            {% endfor %}
                        </div><!--/category-productsr-->



                    </div>
                </div>

                <div class="col-sm-9 padding-right">
                    <div class="features_items"><!--features_items-->

                        {% for product in products %}
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <div style="height: 200px;">
                                        <img src="{{ asset('uploads') }}/images/{{ product.image }}" alt="">
                                        </div>
                                        <h4 >{{ product.title }}</h4>
                                        <h3 style="color: #F5871F">
                                            {{ product.sprice }} ₺
                                        </h3>

                                            <a href="{{ path('product_detail', {'id': product.id}) }}" class="btn btn-default add-to-cart"><i
                                                            class="fa fa-shopping-cart"></i>İncele</a>


                                    </div>

                                    </div>
                                </div>
                            </div>
                        {% endfor %}


                    </div><!--features_items-->
                </div>
            </div>
        </div>
    </section>


{% endblock %}